generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model collection {
  id             String   @id @default(uuid())
  downloadlink   String?
  createdAt      DateTime @default(now())
  creator        String   @default("anonymous")
  fileCount      Int      @default(0)
  filesSize      BigInt   @default(0)
  password       String?
  hasPassword    Boolean  @default(false)
  expirationTime DateTime @default(dbgenerated("now() + interval '3 days'")) @db.Timestamp(6)
  wantsToGetNotified Boolean @default(true)
  files          file[]
}

model file {
  id           String     @id @default(uuid())
  filename     String
  mimetype     String
  size         BigInt
  collectionId String
  createdAt    DateTime   @default(now())
  collection   collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
}

model verification {
  id         String   @id @default(uuid())
  email      String   @unique
  code       Int
  verified   Boolean  @default(false)
  validUntil DateTime @default(now()) @db.Timestamp(6)
  createdAt  DateTime @default(now())
}
